<?xml version="1.0" encoding="UTF-8"?>
<sm:StateMachine xmlns:sm="http://www.stateforge.com/StateMachineDotNet-v1"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 >
  <!-- general settings -->
  <settings asynchronous="false" namespace="Company.Product">
    <object instance="helloWorld" class="HelloWorld"/>
  </settings>
  <!-- events -->
  <events>
    <eventSource name="HelloWorldEvent">
      <event id="evStart"/>
      <event id="evStop">
        <parameter name="force" type="bool"/>
      </event>
      <timer id="evTimer" name="Timer"/>
    </eventSource>
  </events>

  <!-- States -->
  <state name="Top">
    <state name="Idle">
      <transition event="evStart" nextState="Running"/>
    </state>
    <state name="Running">
      <transition event="evStop" nextState="End">
        <condition>force == true</condition>
      </transition>

      <state name="Washing">
      </state>
      <state name="Drying">

      </state>
    </state>
    <state name="End" kind="final"/>
  </state>
</sm:StateMachine>
